{
  "extends": "../../packages/tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/styles/*": ["./src/styles/*"],
      "@app/components": ["./src/components"],
      "@app/templates": ["./src/templates"],
      "@app/mocks": ["./src/mocks"],
      "@app/api": ["./src/api"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules"]
}
